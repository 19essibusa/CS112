#include "array.h"

void initialize(double *a, unsigned size) {
	int val = 0;
	for (unsigned i = 0; i < size; i++) {
		val = i+1;
		a[i] = val;
	}
}

void print(double *a, unsigned size) {
	for (unsigned i = 0; i < size; i++) {
		cout << *a << '\t';
		a++;
	}
}

double average(double *a, unsigned size) {
	double total = 0;
	for (unsigned i = 0; i < size; i++) {
			total += *a;
			a++;
			total = a/size;
		}


	return total;
}

double sum(double *a, unsigned size)
{
	double sum = 0;
		for (unsigned i = 0; i < size; i++) {
				sum += *a;
				a++;

				cout << *a << '\t';
			}
		return sum;
}

